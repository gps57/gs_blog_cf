                @*@if (Request.IsAuthenticated)*@
                @if (User.IsInRole("Admin"))
                {
                  <li>
                    <a href="#">Admin</a>
                    <ul class="dropdown">
                      <li>@Html.ActionLink("Blogs", "Index", "BlogPosts")</li>
