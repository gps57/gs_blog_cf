@model gs_blog_cf.ViewModels.BlogPostsDetailsVM


  <div class="single-blog-wrapper section-padding-0-100">

    @*Header image*@
    <div class="single-blog-area blog-style-2 mb-50">
      <div class="single-blog-thumbnail">
        @*<img src="/Images/b5.jpg" alt="">*@
        <img class="img-responsive" src="@Model.FeaturedPost.MediaPath" alt="">
        <div class="post-tag-content">
          <div class="container">
            <div class="row">
              <div class="col-12">
                <div class="post-date">
                  <a href="#">@Model.FeaturedPost.Created.Day <span>@Model.FeaturedPost.Created.ToString("MMMM")</span></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    @*Blog Content Area*@
    <div class="container">
      <div class="row">
        <!-- ##### Post Content Area ##### -->
        <div class="col-12 col-lg-9">
          <!-- Single Blog Area  -->
          <div class="single-blog-area blog-style-2 mb-50">
            <!-- Blog Content -->
            <div class="single-blog-content">
              <div class="line"></div>
              <a href="#" class="post-tag">Catagory</a>
              <h4><a href="#" class="post-headline mb-0">@Model.FeaturedPost.Title</a></h4>
              <div class="post-meta mb-50">
                <p>By <a href="#">Glen Stewart</a></p>
                <p>@Model.FeaturedPost.Comments.Count comments</p>
              </div>
              <p>
                @Html.Raw(Model.FeaturedPost.Body)
              </p>              
            </div>
          </div>

          <!-- About Author -->
          <div class="blog-post-author mt-100 d-flex">
            <div class="author-thumbnail">
              <img src="/Images/GlenStewart_500x500.jpg" alt="">
            </div>
            <div class="author-info">
              <div class="line"></div>
              <span class="author-role">Author</span>
              <h4><a href="#" class="author-name">Glen P Stewart</a></h4>
              <p>
                I am a full stack web developer with a strong skill set in the .NET/C# technologies.
              </p> <br />
              <a class="btn original-btn" target="_blank" href="https://gs-portfolio-cf.netlify.app">View my Portfolio</a>              
            </div>
          </div>

          <!-- Comment Area Start -->
          <div class="comment_area clearfix mt-70">
            <h5 class="title">Comments</h5>

            <ol>
              <!-- Single Comment Area -->
              <li class="single_comment_area">
                <!-- Comment Content -->
                <div class="comment-content d-flex">
                  <!-- Comment Author -->
                  <div class="comment-author">
                    <img src="/Images/b7.jpg" alt="author">
                  </div>
                  <!-- Comment Meta -->
                  <div class="comment-meta">
                    <a href="#" class="post-date">March 12</a>
                    <p><a href="#" class="post-author">William James</a></p>
                    <p>Efficitur lorem sed tempor. Integer aliquet tempor cursus. Nullam vestibulum convallis risus vel condimentum. Nullam auctor lorem in libero luctus, vel volutpat quam tincidunt.</p>
                    <a href="#" class="comment-reply">Reply</a>
                  </div>
                </div>
                <ol class="children">
                  <li class="single_comment_area">
                    <!-- Comment Content -->
                    <div class="comment-content d-flex">
                      <!-- Comment Author -->
                      <div class="comment-author">
                        <img src="/Images/b7.jpg" alt="author">
                      </div>
                      <!-- Comment Meta -->
                      <div class="comment-meta">
                        <a href="#" class="post-date">March 12</a>
                        <p><a href="#" class="post-author">William James</a></p>
                        <p>Efficitur lorem sed tempor. Integer aliquet tempor cursus. Nullam vestibulum convallis risus vel condimentum. Nullam auctor lorem in libero luctus, vel volutpat quam tincidunt.</p>
                        <a href="#" class="comment-reply">Reply</a>
                      </div>
                    </div>
                  </li>
                </ol>
              </li>

              <!-- Single Comment Area -->
              <li class="single_comment_area">
                <!-- Comment Content -->
                <div class="comment-content d-flex">
                  <!-- Comment Author -->
                  <div class="comment-author">
                    <img src="/Images/b7.jpg" alt="author">
                  </div>
                  <!-- Comment Meta -->
                  <div class="comment-meta">
                    <a href="#" class="post-date">March 12</a>
                    <p><a href="#" class="post-author">William James</a></p>
                    <p>Efficitur lorem sed tempor. Integer aliquet tempor cursus. Nullam vestibulum convallis risus vel condimentum. Nullam auctor lorem in libero luctus, vel volutpat quam tincidunt.</p>
                    <a href="#" class="comment-reply">Reply</a>
                  </div>
                </div>
              </li>
            </ol>
          </div>

          <div class="post-a-comment-area mt-70">
            <h5>Leave a comment</h5>
            <!-- Reply Form -->
            <form action="#" method="post">
              <div class="row">
                <div class="col-12 col-md-6">
                  <div class="group">
                    <input type="text" name="name" id="name" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Name</label>
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <div class="group">
                    <input type="email" name="email" id="email" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Email</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="group">
                    <input type="text" name="subject" id="subject" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Subject</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="group">
                    <textarea name="message" id="message" required></textarea>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Comment</label>
                  </div>
                </div>
                <div class="col-12">
                  @Html.ActionLink("Comment", "Create", "Comments", null, new { @class = "btn original-btn" })
                  @*<button type="submit" class="btn original-btn">Comment</button>*@
                </div>
              </div>
            </form>
          </div>
        </div>

        <!-- ##### Sidebar Area ##### -->
        <div class="col-12 col-md-4 col-lg-3">
          <div class="post-sidebar-area">
            <!-- Could have a search area here -->
            <!-- Could have a Login/Logout/Register area here -->
            <!-- Could have an advertisement here -->
            <!-- Recent Posts Area -->
            <div class="sidebar-widget-area">
              <h5 class="title">Five Most Recent Posts</h5>
              <div class="widget-content">



                <!-- here starts the repeating list of blogs to loop over and display -->
                @foreach (var recentPost in Model.RecentPosts)
                {
                  <div class="single-blog-post d-flex align-items-center widget-post">
                    <!-- Post Thumbnail -->
                    <div class="post-thumbnail">
                      <img class="img-responsive" , src="@recentPost.MediaPath" alt="">
                      @*<img src="img/blog-img/lp1.jpg" alt="">*@
                    </div>
                    <!-- Post Content -->
                    <div class="post-content">
                      <a href="#" class="post-tag">Category</a>
                      <h4>@Html.ActionLink(@recentPost.Title, "Details", "BlogPosts", new { slug = recentPost.Slug }, new { @class = "post-headline" })</h4>
                      <div class="post-meta">
                        <p>@recentPost.Created.Day <span>@recentPost.Created.ToString("MMM yyyy")</span></p>
                      </div>
                    </div>
                  </div>
                  <hr />
                }
              </div>
          </div>
        </div>

      </div>
    </div>
  </div>